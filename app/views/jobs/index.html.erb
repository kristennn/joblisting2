<div class="col-md-12">
  <div class="dropdown pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
      排序
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to("薪资下限", jobs_path(:order => "by_lower_bound")) %></li>
      <li><%= link_to("薪资上限", jobs_path(:order => "by_upper_bound")) %></li>
      <li><%= link_to("发表时间", jobs_path) %></li>
    </ul>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>职位名称</td>
        <td>职位描述</td>
        <td>上传时间</td>
        <td>薪资上限</td>
        <td>薪资下限</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>#</td>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.description %></td>
          <td><%= job.created_at %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.wage_lower_bound %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
